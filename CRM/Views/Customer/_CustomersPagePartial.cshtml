@using CRM.Models
@model List<CustomerViewModel>

<table class="table table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Email</td>
            <td>Phone</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td><a href="/Lead/Edit?phone=@customer.Phone">Edit</a></td>
            </tr>
        }
    </tbody>
</table>

