@using CRM.Models
@model List<CustomerViewModel>

<table class="table table-hover">
    <thead>
        <tr>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Email</td>
            <td>Phone</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
        <tr>
            <td>@customer.FirstName</td>
            <td>@customer.LastName</td>
            <td>@customer.Email</td>
            <td>@customer.Phones.FirstOrDefault().PhoneNumber</td>
            <td><a href="/Customer/Edit?id=@customer.Id">Edit</a></td>
        </tr>
        }
    </tbody>
</table>

