@model SelectList
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Emulate phone call</h2>

<div class="form-group">
    @Html.Label("phone", "Phone number")
    @Html.TextBox("phone", null, new { id = "phoneNum", @class = "form-control" })
</div>
<div class="form-group">
    <div id="drop">
        @Html.Partial("_Drop", Model)
    </div>

    @using (Ajax.BeginForm("RefreshDropDown", new AjaxOptions()
    {
        HttpMethod = "Get",
        UpdateTargetId = "drop",
        InsertionMode = InsertionMode.Replace
    }))
    {
        <button type="submit" class="btn btn-default">Refresh</button>
    }

</div>

<button type="button" name="call" id="btnLogin" class="btn btn-default">Call</button>

<script type="text/javascript" src="~/scripts/jquery.unobtrusive-ajax.js"></script>
<script type="text/javascript" src="~/Scripts/phoneCallEmulatingPage.js"></script>
