@using CRM.Models
@model List<LeadViewModel>

<table class="table table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Email</td>
            <td>Phone</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var lead in Model)
        {
            <tr>
                <td>@lead.Name</td>
                <td>@lead.Email</td>
                <td>@(lead.Phones.FirstOrDefault()?.PhoneNumber)</td>
                <td><a href="/Lead/Edit?id=@lead.Id">Edit</a></td>
                <td style="text-align: center;"><a href="/Lead/ConvertLead?id=@lead.Id">Convert</a></td>
            </tr>
        }
    </tbody>
</table>

